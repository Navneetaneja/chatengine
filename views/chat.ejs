<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="/css/navbar.css" rel="stylesheet" type="text/css"/>
    <link href="/css/chat.css" rel="stylesheet" type="text/css"/>

</head>
<body>
    <div class="container">
        <div>
        <span><strong>Hi <i style="color:red"><%= user.name.toUpperCase() %></i> , Welcome to Chat Engine</strong></span>
        </div>
        <div>
            <a style="color: black;" href="/signout">Log Out</a>
        </div>
    </div>

    <div class="chatbox">
        <div class="topbar">
            <span class="sp1">Let's Talk</span><br/>
            <span>we are offline, we will get back to you soon</span>
        </div>
        <div class="chatsdata">
            <% for(data of chatdata){ %>
                <% if((userId).equals(data.senderId)){ %>
                <strong><div style="text-align: right;">YOU</div></strong>
                <div style="margin-left: auto;" class="messagedata"><div style="background-color:dodgerblue;color:white;padding:3px 5px;border-radius:5px"><%= data.message %></div></div><br/>
                <% }else{ %>
                <strong><div><%= data.sender.toUpperCase() %></div></strong>
                <div class="messagedata"><div style="background-color:gray;color:white;padding:3px 5px;border-radius:5px"><%= data.message %></div></div><br/>
            <% }} %>
        </div>
        <div class="typebar">
            <div class="textbox">
                <input id="chat-message-input" type="text" placeholder="Enter Message..." required />
            </div>
            <div class="send">
                <button onclick=sendMessage()>SEND</button>
            </div>
        </div>
    </div>
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js"></script>
    <script>
        const socket=io('http://localhost:5000');
        socket.on('connection');

        socket.on('message',(data)=>{
            window.location.href=window.location.href;
        })

        const sendMessage=()=>{
            var send_message=document.getElementById('chat-message-input');
            console.log(send_message.value);
            socket.emit('message',send_message.value);
        }
    </script>

</body>
</html>